generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Lead {
  id            String   @id @default(cuid())
  createdAt     DateTime @default(now())

  fullName      String
  email         String?
  phone         String?
  city          String?
  hasCardVTC    Boolean
  hasVehicle    Boolean
  experience    String   // "0-1", "1-3", "3+"
  platforms     String   // csv
  weeklyHours   Int?
  message       String?

  // simulation history optional
  simulations   Simulation[]
}

model Simulation {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  ca        Float
  net       Float
  leadId    String?
  lead      Lead?    @relation(fields: [leadId], references: [id], onDelete: SetNull)

  @@index([createdAt])
  @@index([leadId])
}
