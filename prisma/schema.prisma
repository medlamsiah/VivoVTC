generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Lead {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())

  fullName    String
  email       String?
  phone       String?
  city        String?
  hasCardVTC  Boolean
  hasVehicle  Boolean
  experience  String
  platforms   String
  weeklyHours Int?
  message     String?

  simulations Simulation[]
}

model Simulation {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  ca        Float
  net       Float

  leadId    String?
  lead      Lead?    @relation(fields: [leadId], references: [id], onDelete: SetNull)

  @@index([createdAt])
  @@index([leadId])
}
